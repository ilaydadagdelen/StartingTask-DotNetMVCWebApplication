@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Starting Task</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <link href="/main-page/css/styles.css" rel="stylesheet" />
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            @if (Request.RequestContext.RouteData.Values["controller"].ToString() == "Home" &&
                 Request.RequestContext.RouteData.Values["action"].ToString() == "Index")
            {
                <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
            }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item active"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                        @if (Session["UserName"] != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Session["UserName"]</a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="@Url.Action("Profile", "Home")">Profil</a>
                                    @if (Session["UserName"] != null && Session["UserName"].ToString() == "admin")
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Index", "Subject")">Admin Panel</a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("LogOut", "SignUp")">Çıkış</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("SignUp", "SignUp")">Kayıt Ol </a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "SignUp")">Giriş Yap</a></li>

                        }

                    </ul>
                </div>
            </div>
    </nav>

    @RenderBody()


    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/main-page/js/scripts.js"></script>
</body>
</html>
